<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionSupermarche.Pages.StatistiquesPage"
             Title="Statistiques">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Bouton de rafraîchissement -->
            <Button Text="Rafraîchir les statistiques"
                    Clicked="OnRafraichirClicked"/>
            
            <!-- Total général -->
            <Frame BorderColor="Gray" Padding="15">
                <StackLayout>
                    <Label Text="Total Général" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="LabelTotalGeneral"
                           Text="0h"
                           FontSize="Large"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
            
            <!-- Heures par employé -->
            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Heures par Employé" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>
                    <ListView x:Name="ListViewHeuresEmployes"
                             HeightRequest="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Nom}" 
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding TotalHeures, StringFormat='{0}h'}"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>

            <!-- Heures par rayon -->
            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Heures par Rayon" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>
                    <ListView x:Name="ListViewHeuresRayons"
                             HeightRequest="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Nom}" 
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding TotalHeures, StringFormat='{0}h'}"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>

            <!-- Heures par mois -->
            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Heures par Mois" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>
                    <ListView x:Name="ListViewHeuresMois"
                             HeightRequest="150">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Mois}" 
                                               VerticalOptions="Center"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding TotalHeures, StringFormat='{0}h'}"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>