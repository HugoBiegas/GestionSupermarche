<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionSupermarche.Pages.SaisieTempsPage"
             xmlns:converters="clr-namespace:GestionSupermarche.Converters"
             Title="Saisie des Temps">
    <ContentPage.Resources>
        <converters:HeuresValidationConverter x:Key="HeuresConverter"/>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Frame BorderColor="Gray" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Saisie du Temps de Travail" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>

                    <Picker x:Name="PickerEmploye"
                            Title="Sélectionnez un employé"/>

                    <Picker x:Name="PickerRayon"
                            Title="Sélectionnez un rayon"/>

                    <DatePicker x:Name="DatePickerTravail"
                              Format="dd/MM/yyyy"/>

                    <Entry x:Name="EntryHeures"
                       Placeholder="Nombre d'heures (0-24)"
                       Keyboard="Numeric"
                       MaxLength="2"
                       Text="{Binding HeuresText, Converter={StaticResource HeuresConverter}, Mode=TwoWay}"/>


                    <Button Text="Enregistrer"
                            Clicked="OnEnregistrerClicked"/>

                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Derniers Enregistrements" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>

                    <ListView x:Name="ListViewDerniersTemps"
                             HeightRequest="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Column="0" Grid.Row="0" 
                                               Text="{Binding NomEmploye}"
                                               FontAttributes="Bold"/>
                                        
                                        <Label Grid.Column="0" Grid.Row="1" 
                                               Text="{Binding NomRayon}"
                                               TextColor="Gray"/>
                                        
                                        <Label Grid.Column="1" Grid.Row="0" 
                                           Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                                           VerticalOptions="Center"
                                           Margin="0,0,20,0"/>
                                        
                                        <Label Grid.Column="2" Grid.Row="0" 
                                           Text="{Binding Temps, StringFormat='{0}h'}"
                                           VerticalOptions="Center"
                                           Margin="20,0,0,0"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>