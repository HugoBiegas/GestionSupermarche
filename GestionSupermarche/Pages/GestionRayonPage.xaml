<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dto="clr-namespace:GestionSupermarche.DTO"
             x:Class="GestionSupermarche.Pages.GestionRayonPage"
             Title="Gestion des Rayons">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- Formulaire d'ajout -->
            <Frame BorderColor="Gray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Nouveau Rayon" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>

                    <Entry x:Name="EntryNomRayon" 
                           Placeholder="Nom du rayon"/>

                    <Picker x:Name="PickerSecteur"
                            Title="SÃ©lectionnez un secteur"/>

                    <Button x:Name="BtnAjouter" 
                            Text="Ajouter"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            Clicked="OnAjouterClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Liste des rayons -->
            <Frame BorderColor="Gray" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Liste des Rayons" 
                           FontSize="Title" 
                           HorizontalOptions="Center"/>

                    <ListView x:Name="ListViewRayons"
                             HeightRequest="400"
                             ItemSelected="OnRayonSelected"
                             SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="dto:RayonDto">
                                <ViewCell>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding Nom}" 
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding NomSecteur}" 
                                                   TextColor="Gray"
                                                   FontSize="Small"/>
                                        </VerticalStackLayout>
                                        <Button Grid.Column="1"
                                                Text="Supprimer"
                                                BackgroundColor="#FF5252"
                                                TextColor="White"
                                                Clicked="OnSupprimerClicked"
                                                Margin="5,0,0,0"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>